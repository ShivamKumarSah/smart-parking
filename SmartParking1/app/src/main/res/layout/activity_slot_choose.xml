<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SlotChoose">

    <!-- RecyclerView for floors -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/parkingNameBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Parking Name"
            android:textAlignment="center"
            android:textColor="@color/purple"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/parkingLocationBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="kolkupukur, baguihati, kolkata-700059"
            android:textColor="#393939" />

        <LinearLayout
            android:id="@+id/floorView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
